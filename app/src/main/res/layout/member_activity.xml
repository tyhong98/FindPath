<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/option_codetype_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="#4682C2"
        android:gravity="center"
        android:text="회원 정보"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_above="@+id/dialog_numbers_bottom_layout"
        android:layout_below="@+id/option_codetype_dialog_title_tv"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="-3dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/memberNameTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="회원 이름" />

            <TextView
                android:id="@+id/memberName"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/memberPhoneTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="전화 번호" />

            <TextView
                android:id="@+id/memberPhone"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/memberBirthTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="생년월일" />

            <TextView
                android:id="@+id/memberBirth"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/memberGenderTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="성별" />

            <TextView
                android:id="@+id/memberGender"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/memberAgeTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="나이" />

            <TextView
                android:id="@+id/memberAge"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/memberEmailTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="Email" />

            <TextView
                android:id="@+id/memberEmail"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/dialog_numbers_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/memberModify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#757575"
            android:gravity="center"
            android:text="회원정보 수정"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/memberCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#757575"
            android:gravity="center"
            android:text="취소"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>