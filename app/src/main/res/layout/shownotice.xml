<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/option_codetype_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="#4682C2"
        android:gravity="center"
        android:text="돌발 내용"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_above="@+id/dialog_numbers_bottom_layout"
        android:layout_below="@+id/option_codetype_dialog_title_tv"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="-3dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/IDTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="사고 CODE" />

            <TextView
                android:id="@+id/issue_ID"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"

                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/OccrTimeTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="발생 시간" />

            <TextView
                android:id="@+id/OccrTime"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/ExpClrTimeTitle"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="예상 종료 시간" />

            <TextView
                android:id="@+id/ExpClTime"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/AccInfoTitle"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="사고 내용" />

            <TextView
                android:id="@+id/AccInfo"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border_bottom"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dialog_numbers_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/option_codetype_dialog_negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#757575"
            android:gravity="center"
            android:text="취소"
            android:textColor="#fff"
            android:textSize="16sp" />



    </LinearLayout>

</RelativeLayout>